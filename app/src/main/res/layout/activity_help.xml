<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingTop="50dp"
            android:paddingRight="35dp"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Help"
                android:textColor="@color/font"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/securitySubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pageTitle"
                android:layout_marginBottom="20dp"
                android:text="Security"
                android:textColor="@color/font"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/processSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Process"
                android:textColor="@color/font"
                android:textSize="20sp"
                android:layout_below="@id/securityA1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/votingSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Voting"
                android:textColor="@color/font"
                android:textSize="20sp"
                android:layout_below="@id/processA3"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/verificationSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Verification"
                android:textColor="@color/font"
                android:textSize="20sp"
                android:layout_below="@id/votingA3"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/securityQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/ecclesiaDifferentQ"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/securitySubTitle"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/securityA1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/ecclesiaDifferentA"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/securityQ1"/>

<!--                <TextView-->
<!--                    android:id="@+id/securityQ2"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginBottom="20dp"-->
<!--                    android:text="@string/ecclesiaPropertiesQ"-->
<!--                    android:textColor="@color/font"-->
<!--                    android:textSize="18sp"-->
<!--                    android:layout_below="@id/securityA1"-->
<!--                    android:textStyle="bold"/>-->

<!--                <TextView-->
