<!--                    android:textSize="18sp"-->
<!--                    android:layout_below="@id/securityQ2"/>-->

            <TextView
                android:id="@+id/processQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/ecclesiaStepsQ"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/processSubTitle"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/processA1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/ecclesiaStepsA"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/processQ1"/>

            <TextView
                android:id="@+id/processQ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/ecclesiaStatesQ"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/processA1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/processA2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/ecclesiaStatesA"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/processQ2"/>

            <TextView
                android:id="@+id/processQ3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/whyRegisteredQ"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/processA2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/processA3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/whyRegisteredA"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/processQ3"/>

            <TextView
                android:id="@+id/votingQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/abstainQ"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/votingSubTitle"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/votingA1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/abstainA"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/votingQ1"/>

            <TextView
                android:id="@+id/votingQ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/joinAfterQ"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/votingA1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/votingA2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/joinAfterA"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/votingQ2"/>

            <TextView
                android:id="@+id/votingQ3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/voteAgainQ"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/votingA2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/votingA3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/voteAgainA"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/votingQ3"/>

            <TextView
                android:id="@+id/verificationQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/howLongQ"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/verificationSubTitle"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/verificationA1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/howLongA"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/verificationQ1"/>

            <TextView
                android:id="@+id/verificationQ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/howVerifyQ"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/verificationA1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/verificationA2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/howVerifyA"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:layout_below="@id/verificationQ2"/>

        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>