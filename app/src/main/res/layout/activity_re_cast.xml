<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReCastActivity"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingRight="35dp"
    android:paddingLeft="35dp">

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote Not Recorded"
        android:textColor="@color/font"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/problemTxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTxt"
        android:layout_marginTop="20dp"
        android:text="@string/whyVoteProblemA"
        android:textColor="@color/font"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/problemTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/problemTxt1"
        android:layout_marginTop="20dp"
        android:text="@string/solveProblem"
        android:textColor="@color/font"
        android:textSize="18sp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/reCastBtn"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue_dark"
        android:text="Vote again"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>